<div class="container p-4">
    <div class="row">
        <table class="table table-responsive">
            <thead>
                <th>nombre_pdv</th>
                <th>direccion</th>
                <th>latitud</th>
                <th>longitud</th>
                <th>Acciones</th>

            </thead>
             {{#each links}}
             <tr>
                 <td>{{nombre_pdv}}</td>
                 <td>{{direccion}}</td>
                 <td>{{latitud}}</td>
                 <td>{{longitud}}</td>
                 <td>
                    <a href="/clientes/delete/{{id_pdv}}" class="btn btn-danger">borrar</a>
                    <a href="/clientes/edit/{{id_pdv}}" class="btn btn-secondary">editar</a>

                 </td>
             </tr>
           
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center ">
                <P>no hay links guardados aun</P>
                <a href="/clientes/add">crea uno</a>
            </div>

        </div>
        {{/each}}
        </table>
       
    </div>
</div>